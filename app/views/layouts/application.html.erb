  </head>

  <body style="background-color: #f7f7f7; border: 0 0 0 1px solid">
    <div class="navbar-lewagon" style="background-color: #ededed">
      <%= link_to "home", restaurants_path, class: "btn btn-primary" %>
      <%= link_to "add restaurant", new_restaurant_path, class: "btn btn-primary"%>
    </div>
    <%= yield %>

  </body>
